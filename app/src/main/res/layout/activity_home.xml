<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        style="@style/DefaultTextView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:textSize="25sp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenFaq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minWidth="35dp"
        android:minHeight="35dp"
        app:cornerRadius="10dp"
        android:layout_marginEnd="35dp"
        app:icon="@drawable/ic_baseline_info_24"
        app:iconPadding="0dp"
        app:iconTint="@color/onBackgroundText"
        android:layout_marginTop="-10dp"
        />
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            app:tabIndicatorHeight="4dp"
            app:tabPaddingBottom="-12dp"
            app:tabTextColor="@color/onBackgroundText"
            app:tabIndicatorFullWidth="false"
            app:tabIndicator="@drawable/tab_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:tabBackground="@color/background"
            app:tabTextAppearance="@style/ViewPagerTabText" />
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>