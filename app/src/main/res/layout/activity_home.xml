<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DefaultLayout"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beproductiv"
        style="@style/DefaultTextView"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="25sp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/PaddingLayout"
        >
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            app:tabIndicatorHeight="4dp"
            app:tabPaddingBottom="-12dp"
            app:tabTextColor="@color/onBackgroundText"
            app:tabIndicatorFullWidth="false"
            app:tabIndicator="@drawable/tab_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@color/background"
            app:tabTextAppearance="@style/ViewPagerTabText" />
    </androidx.viewpager.widget.ViewPager>
</LinearLayout>