<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    style="@style/TodoCard"
    app:shapeAppearance="@style/RoundedCorners">

    <RelativeLayout
        style="@style/CardLayout"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewExpandCollapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:minWidth="35dp"
                android:minHeight="35dp"
                android:src="@drawable/ic_baseline_expand_more_24" />
            <TextView
                android:id="@+id/todo_name"
                style="@style/CardHeader"
                android:layout_marginEnd="35dp"
                android:layout_centerVertical="true"
                tool:text="Hello"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutMiddle"
            android:layout_below="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/todo_description"
                style="@style/CardSubHeader"
                tool:text="World\nWorld"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/layoutMiddle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    style="@style/ButtonPrimary"
                    android:id="@+id/btnStartTimer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"
                    android:backgroundTint="@color/primary"
                    android:textAllCaps="true"
                    app:cornerRadius="10dp"
                    android:textFontWeight="600"
                    android:text="@string/label_select_task" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditItem"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:cornerRadius="10dp"
                    app:icon="@drawable/ic_baseline_edit_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconTint="@color/onBackgroundText" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
