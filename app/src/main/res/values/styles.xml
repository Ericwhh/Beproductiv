<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="DefaultLayout">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/background</item>
        <item name="color">@color/onBackgroundText</item>
    </style>

    <style name="PaddingLayout">
        <item name="android:background">@color/background</item>
        <item name="color">@color/onBackgroundText</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>

    </style>

    <style name="CardWrapper" parent="Widget.MaterialComponents.CardView">
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="color">@color/onBackgroundText</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="rippleColor">@color/surfaceRipple</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CardLayout" >
        <!-- Customize your theme here. -->
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="DefaultTextView" parent="Widget.MaterialComponents.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/onBackgroundText</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FadedTextView" parent="Widget.MaterialComponents.TextView">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/onSurfaceText</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ViewPagerTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onBackgroundText</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>