<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <!-- Default text -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textViewStyle">@style/DefaultTextView</item>
        <item name="android:buttonStyle">@style/DefaultTextView</item>
    </style>

    <style name="DefaultTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/onBackgroundText</item>
    </style>

    <style name="FadedTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/onSurfaceText</item>
    </style>

    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="color">@color/onBackgroundText</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="TodoCard" parent="Card">
        <item name="android:minHeight">74dp</item>
        <item name="android:maxHeight">92dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/surfaceRipple</item>
    </style>

    <style name="TimerCard" parent="Card">
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/surfaceRipple</item>
        <item name="android:background">@color/surface</item>
    </style>

    <style name="PreferenceCard" parent="Card">
        <item name="rippleColor">@color/surfaceRipple</item>
    </style>
    <style name="FAQCard" parent="Card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@color/surfaceRipple</item>
        <item name="android:background">@color/surface</item>
    </style>

    <style name="CardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingStart">?attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?attr/listPreferredItemPaddingEnd</item>
    </style>

    <style name="CardHeader" parent="DefaultTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="CardSubHeader" parent="FadedTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceListItemSecondary</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="RoundedTopCorners">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RoundedBottomCorners">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
    </style>

    <style name="RoundedNoCorners">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ViewPagerTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonDefault" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">160dp</item>
        <item name="rippleColor">#40000000</item>
    </style>

    <style name="ButtonPrimary" parent="ButtonDefault">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonDefault">
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:textColor">@color/primary</item>'
        <item name="strokeColor">@color/background</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TabContentWrapper">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="MaterialTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:background">@color/surface</item>
        <item name="boxStrokeColor">@color/background</item>
    </style>
</resources>